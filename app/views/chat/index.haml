.chatspace.clearfix
  = render 'groups/navigation'
  .chat.left
    .chat-header
      .chat-header__left.left
        %p.group-name
          %h2
            = @group.name
        .chat-header__left__members
          %p
            Members:
            - @group.users.each do |user|
              = user.name

      .chat-header__right.right
        = link_to 'Edit', edit_group_path(@group), class: "edit-btn"
    .chat-body
      %ul.chat-info
        %li
          .list-header
            .list-header__name.left
              kondo
            .list-header__date.left
              2016/11/12 00:31:20
          .list-message
            おはよう！
        %li
          .list-header
            .list-header__name.left
              t-kusakabe
            .list-header__date.left
              2016/11/12 00:31:20
          .list-message
            こんにちは！
    .chat-footer
      %form.relative
        .footer-body.relative
          %textarea{ placeholder: "type a message", class: "message_body"}
          %label.footer-file.absolute-top-right
            %i.fa.fa-image
        %input{ type: "submit", value: "Send", class: "submit-btn absolute-top-right"}
